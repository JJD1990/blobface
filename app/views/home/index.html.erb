<div class="container text-center">
  <h1>Welcome to BlobFace</h1>
  <h2>New Post</h2>
  <%= render 'posts/form', post: Post.new %>
  <div id="posts">
    <% @posts.each do |post| %>
      <div class="card text-left">
        <%= render 'posts/post', post: post %>
      </div>
    <% end %>
  </div>
</div>
