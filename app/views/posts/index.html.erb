<h1>Posts</h1>

<%= render 'form', post: Post.new %>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="card text-left">
      <%= render 'posts/post', post: post %>
    </div>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
<%= link_to "New post", new_post_path %>
</div>