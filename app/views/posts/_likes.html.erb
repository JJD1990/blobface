<%= tag.div id: dom_id(post, :likes) do %>
    <%= button_to like_button_text(post), post_like_path(post), method: :patch %>
    <%= post.likes_count %>

    <% post.likes.includes(:user).each do |like| %>
        <% if like.user&.profile_picture&.attached? %>
            <%= image_tag like.user.profile_picture, class: "rounded-circle", style: "width: 60px; height: 50px;" %>
        <% else %>
            <%= image_tag "default_avatar.png", class: "rounded-circle", style: "width: 60px; height: 50px;" %>
        <% end %>
    <% end %>
<% end %>
